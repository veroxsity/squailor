{
  "name": "squailor",
  "version": "1.0.0",
  "description": "AI-powered document summarizer for PowerPoint and PDF files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development&& electron .",
  "build": "node scripts/build.js",
  "prebuild": "node scripts/verify-deps.js",
  "build:win": "node scripts/build.js --win",
  "build:portable": "node scripts/build.js --win zip",
  "build:installer": "node scripts/build.js --win nsis",
  "build:mac": "node scripts/build.js --mac",
  "build:linux": "node scripts/build.js --linux",
    "test": "echo \"Error: no test specified\" && exit 1",
    "make-icon": "node scripts/make-icon.js"
  },
  "keywords": [
    "electron",
    "ai",
    "summarizer",
    "pdf",
    "powerpoint",
    "openai"
  ],
  "author": {
    "name": "veroxsity",
    "email": "dev@veroxsity.com"
  },
  "license": "ISC",
  "dependencies": {
  "electron-updater": "^6.6.2",
    "electron-log": "^4.4.7",
    "jszip": "^3.10.1",
    "marked": "^16.3.0",
    "openai": "^6.0.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse-fork": "^1.2.0",
    "pdfjs-dist": "^5.4.149",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "jimp": "^1.6.0"
  },
  "bin": {},
  "build": {
    "appId": "com.squailor.app",
    "productName": "Squailor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/{.git,node_modules/.cache,dist}/*",
      "!*.md"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  ,
  "publish": [
    {
      "provider": "github",
      "owner": "veroxsity",
      "repo": "Squailor"
    }
  ]
  }
}
